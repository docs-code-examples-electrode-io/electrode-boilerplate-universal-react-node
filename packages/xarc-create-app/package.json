{
  "name": "@xarc/create-app",
  "version": "3.0.10",
  "description": "Create react.js/node.js webapp using the Electrode Platform",
  "main": "dist/index.js",
  "scripts": {
    "prepublishOnly": "webpack",
    "test": "xrun xarc/test-only",
    "coverage": "xrun xarc/test-cov"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bin": {
    "create-app": "bin/create-app.js"
  },
  "keywords": [
    "electrode",
    "react",
    "node.js",
    "webapp"
  ],
  "files": [
    "bin",
    "dist",
    "lib",
    "template"
  ],
  "author": "Electrode (http://www.electrode.io/)",
  "contributors": [
    "Joel Chen <xchen@walmartlabs.com>"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/sinon": "^9.0.0",
    "@types/sinon-chai": "^3.2.4",
    "@xarc/module-dev": "^2.2.4",
    "babel-loader": "^8.0.6",
    "chai": "^4.2.0",
    "chalker": "^1.2.0",
    "lodash": "^4.17.15",
    "mocha": "^7.1.0",
    "nyc": "^15.0.0",
    "opfs": "^1.1.1",
    "prompts": "^2.3.2",
    "shcmd": "^0.7.9",
    "sinon": "^7.2.6",
    "sinon-chai": "^3.3.0",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-cli": "^3.3.9",
    "xclap": "^0.2.51"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "dependencies": {
    "chai": "^4.2.0"
  },
  "mocha": {
    "require": [
      "./test/setup.js"
    ],
    "recursive": true
  },
  "nyc": {
    "extends": [],
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "*clap.js",
      "*clap.ts",
      "coverage",
      "dist",
      "docs",
      "gulpfile.js",
      "test",
      "xrun*.js",
      "xrun*.ts"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true
  },
  "@xarc/module-dev": {
    "features": [
      "mocha"
    ]
  }
}
